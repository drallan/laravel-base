root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# Except on blade files
[*.blade.php]
indent_style = space
indent_size = 2

# 2 space indentation
[*.{js,json}]
indent_style = space
indent_size = 2
